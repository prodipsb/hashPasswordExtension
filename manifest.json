{
    "manifest_version": 3,
    "name": "Password Hash Generator",
    "version": "1.0",
    "description": "Generate hash of a password using SHA-256 algorithm.",
    "permissions": ["activeTab", "scripting","http://*/*", "https://*/*"],
    "content_security_policy": {
        "script-src": "self",
        "object-src": "self",
        "script-src-elem": "self",
        "unsafe-inline": "https://cdn.jsdelivr.net/"
     },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}
